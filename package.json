{
  "name": "shader-validator",
  "displayName": "Shader validator",
  "description": "HLSL / GLSL / WGSL linting for vscode",
  "icon": "res/icon.png",
  "version": "0.0.1",
  "publisher": "antaalt",
  "repository": { 
    "type": "git", 
    "url": "https://github.com/antaalt/hlsl-validator" 
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "shader",
    "hlsl",
    "glsl",
    "wgsl"
  ],
  "activationEvents": [
    "onLanguage:glsl",
    "onLanguage:wgsl",
    "onLanguage:hlsl"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-vscode.wasm-wasi-core"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hlsl.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "hlsl",
        "extensions": [
          ".hlsl",
          ".hlsli",
          ".fx",
          ".fxh"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "glsl",
        "extensions": [
          ".glsl",
          ".vert",
          ".frag",
          ".mesh",
          ".task",
          ".comp",
          ".geom",
          ".tesc",
          ".tese"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "wgsl",
        "extensions": [
          ".wgsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hlsl",
        "scopeName": "source.hlsl",
        "path": "./syntaxes/hlsl.tmLanguage.json"
      },
      {
        "language": "glsl",
        "scopeName": "source.glsl",
        "path": "./syntaxes/glsl.tmLanguage.json"
      },
      {
        "language": "wgsl",
        "scopeName": "source.wgsl",
        "path": "./syntaxes/wgsl.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "shader",
        "label": "Shader",
        "path": "./fileicons/turtles-icon-theme.json"
      }
    ],
    "configuration": {
      "title": "HLSL",
      "properties": {
        "hlsl.autocomplete": {
          "description": "Autocomplete shader code as you type",
          "type": "boolean",
          "default": true
        },
        "hlsl.validateOnType": {
          "description": "Validate shader as you type.",
          "type": "boolean",
          "default": true
        },
        "hlsl.validateOnSave": {
          "description": "Validate shader when you save a file.",
          "type": "boolean",
          "default": true
        },
        "hlsl.severity": {
          "type": "string",
          "description": "Minimum linting severity. Set it lower to display some hints aswell. Might not be supported by all languages",
          "default": "info",
          "enum": [
            "none",
            "error",
            "warning",
            "info",
            "hint"
          ]
        },
        "hlsl.includes": {
          "description": "includes",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@vscode/wasm-wasi": "0.11.0-next.0"
  }
}
