{
  "name": "shader-validator",
  "displayName": "Shader validator",
  "description": "HLSL / GLSL / WGSL linting for vscode",
  "icon": "res/logo-shader-validator.png",
  "galleryBanner.color": {
    "color": "#9ad0ff",
    "theme": "light"
  },
  "version": "0.1.3",
  "server_version": "0.1.3",
  "publisher": "antaalt",
  "repository": {
    "type": "git",
    "url": "https://github.com/antaalt/hlsl-validator"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "shader",
    "lint",
    "validate",
    "hlsl",
    "glsl",
    "wgsl"
  ],
  "activationEvents": [
    "onCommand:shader.validateFile",
    "onLanguage:glsl",
    "onLanguage:wgsl",
    "onLanguage:hlsl"
  ],
  "main": "./dist/node/extension",
  "browser": "./dist/web/extension",
  "contributes": {
    "commands": [
      {
        "command": "shader.validateFile",
        "title": "Validate file"
      }
    ],
    "languages": [
      {
        "id": "hlsl",
        "extensions": [
          ".hlsl",
          ".hlsli",
          ".fx",
          ".fxh"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "glsl",
        "extensions": [
          ".glsl",
          ".vert",
          ".frag",
          ".mesh",
          ".task",
          ".comp",
          ".geom",
          ".tesc",
          ".tese"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "wgsl",
        "extensions": [
          ".wgsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hlsl",
        "scopeName": "source.hlsl",
        "path": "./syntaxes/hlsl.tmLanguage.json"
      },
      {
        "language": "glsl",
        "scopeName": "source.glsl",
        "path": "./syntaxes/glsl.tmLanguage.json"
      },
      {
        "language": "wgsl",
        "scopeName": "source.wgsl",
        "path": "./syntaxes/wgsl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Shader Validator",
      "properties": {
        "shader-validator.autocomplete": {
          "description": "Autocomplete shader code as you type",
          "type": "boolean",
          "default": true
        },
        "shader-validator.validateOnType": {
          "description": "Validate shader as you type.",
          "type": "boolean",
          "default": true
        },
        "shader-validator.validateOnSave": {
          "description": "Validate shader when you save a file.",
          "type": "boolean",
          "default": true
        },
        "shader-validator.severity": {
          "type": "string",
          "description": "Minimum linting severity. Set it lower to display some hints aswell. Might not be supported by all languages.",
          "default": "info",
          "enum": [
            "none",
            "error",
            "warning",
            "info",
            "hint"
          ]
        },
        "shader-validator.includes": {
          "description": "Include paths to look up for includes.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "shader-validator.defines": {
          "description": "Preprocessor variables and values.",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "shader-validator.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "verbose",
          "description": "Trace requests to the shader-language-server (this is usually overly verbose and not recommended for regular users)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
    "pretest": "webpack --mode development && tsc -p . --outDir out",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "1.88.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/test-web": "^0.0.56",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/wasm-wasi": "^0.13.0-pre.1",
    "@vscode/wasm-wasi-lsp": "^0.1.0-pre.6",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "vscode-languageclient": "^10.0.0-next.3"
  }
}
