{
  "name": "hlsl",
  "displayName": "hlsl-validator",
  "description": "High-Level Shader Language support for vscode",
  "version": "0.0.1",
  "publisher": "antaalt",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "shader",
    "hlsl"
  ],
  "activationEvents": [
    "onCommand:hlsl.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hlsl.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [{
      "id": "hlsl",
      "aliases": ["hlsl", "hlsl"],
      "extensions": [".hlsl",".h",".fx",".fxh",""],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "hlsl",
      "scopeName": "source.hlsl",
      "path": "./syntaxes/hlsl.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
